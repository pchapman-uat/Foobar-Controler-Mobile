{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "EAS Build",
      "type": "shell",
      "command": "eas build --platform android --profile preview",
      "group": "build",
      "problemMatcher": [],
    },
    {
      "label": "EAS Local Build",
      "type": "shell",
      "command": "eas build --platform android --profile preview --local --output ./builds/android/app-release/",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "ESLint",
      "type": "eslint",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "options": {
        "statusbar": {
          "hide": true
        }
      },
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "TypeScript Validate",
      "type": "shell",
      "command": "tsc --noEmit",
      "problemMatcher": "$tsc",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "options": {
        "statusbar": {
          "hide": true
        }
      },
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Validate All",
      "dependsOn": [
        "ESLint",
        "TypeScript Validate"
      ],
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}